# Promptly Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required for OpenAI client)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for Anthropic client)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Studio API Key (required for Google AI client)
GOOGLE_AI_STUDIO_API_KEY=you_google_ai_api_key_here

# Promptly Configuration
PROMPTLY_DB_PATH=promptly_traces.db
PROMPTLY_LOG_LEVEL=INFO

# Optional: Custom database path for traces
# PROMPTLY_DB_PATH=/path/to/custom/traces.db

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
# PROMPTLY_LOG_LEVEL=DEBUG

# Optional: Toggle Tracing
PROMPTLY_TRACING_ENABLED=true
